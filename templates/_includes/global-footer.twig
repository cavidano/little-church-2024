<footer id="global-footer">

    <h2 class="screen-reader-only">
        Page Footer
    </h2>

    <div class="padding-y-4 border-top">

        <div class="container wide--xl">

            <div class="grid grid--column-2--md gap-3">

                <form class="form" id="newsletter-form" novalidate>
                    <div class="form-entry"
                        data-required="true"
                        data-error-message="Enter a valid email address">

                        <label class="form-entry__field">

                            <span class="form-entry__field__label">
                                Receive Our Newsletter
                            </span>

                            <span class="form-entry__field__input">
                                <input
                                    type="email"
                                    name="textInputExample"
                                    id="text-input-example"
                                    aria-describedby="help-text-input-example"
                                />
                                <button class="button theme-primary">
                                    Sign Up
                                </button>
                            </span>

                        </label>

                        <small class="form-entry__help" id="help-text-input-example">
                            Add Your Email Address
                        </small>

                    </div>
                </form>

                <div class="text-align-center">
                    <p class=" margin-bottom-1">
                        <strong>
                            Follow Us
                        </strong>
                    </p>

                    {% set socialMediaChannels = craft.app.globals.getSetByHandle('socialMedia').socialMediaChannels.all() %}
                    
                    <ul class="nav nav--horizontal justify-content-center">
                        {% for entry in socialMediaChannels %}
                            <li>
                                <a
                                    class="button button--icon-only border-radius-circle"
                                    href="{{ entry.socialMediaUrl }}"
                                    aria-label="{{ entry.title }}"
                                    target="_blank"
                                >
                                    <span class="icon icon-{{ entry.iconHandle }}" aria-hidden="true"></span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

            </div>

        </div>
    </div>

