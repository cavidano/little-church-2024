
<div class="border-top padding-y-5">
    <div class="container wide--xl">

        <div class="grid grid--column-2">

            <form class="form" id="newsletter-form" novalidate>
                <div class="form-entry"
                    data-required="true"
                    data-error-message="Enter a valid email address">

                    <label class="form-entry__field">

                        <span class="form-entry__field__label">
                            Receive Our Newsletter
                        </span>

                        <span class="form-entry__field__input">
                            <input
                                type="email"
                                name="textInputExample"
                                id="text-input-example"
                                aria-describedby="help-text-input-example"
                            />
                            <button class="button theme-primary">
                                Sign Up
                            </button>
                        </span>

                    </label>

                    <small class="form-entry__help" id="help-text-input-example">
                        Add Your Email Address
                    </small>

                </div>
            </form>

            <div class="text-align-center">
                <p class=" margin-bottom-1">
                    <strong>
                        Follow Us
                    </strong>
                </p>
                <div class="flex-row gap-2 justify-content-center">
                    <button class="button button--icon-only">
                        <span class="icon icon-home" aria-hidden="true"></span>
                    </button>
                    <button class="button button--icon-only">
                        <span class="icon icon-print" aria-hidden="true"></span>
                    </button>
                    <button class="button button--icon-only">
                        <span class="icon icon-settings" aria-hidden="true"></span>
                    </button>
                </div>
            </div>

        </div>



    </div>
</div>

